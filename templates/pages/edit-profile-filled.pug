extends ../layout/main
include ../layout/mixins

block title
    | Edit Profile Filled

block styles
    
block content 
    .card 
        .container 
            .card__header
                .card__badge VERIFIED user

                .card__user 
                    .card__user-logo 
                        img(src="../assets/content/avatar.jpg" alt="" class="card__user-img")

                    .card__user-column 
                        .card__user-title Hello, Johny Depp

        .form-block.form-block_bg-gray  
            .container 
                .form-block__wrapper
                    form.form-block__box
                        .form-block__top
                            .form-block__title Edit Profile

                        .form-block__item 
                            label.form-block__label(for="name") Name

                            input.form-block__input(type="text" id="name" value="Johny Depp")
                        .form-block__item 
                            label.form-block__label(for="email") Email

                            input.form-block__input(type="text" id="email" disabled value="test")
                        +form-block-select("Country", "country")
                        +form-block-select("City", "city")
                        +form-block-select("Country", "country")
                        .form-block__item 
                            label.form-block__label(for="phone") Phone

                            input.form-block__input(type="text" id="phone" value="+1 839 1203 9482 9282")
                        .form-block__item 
                            label.form-block__label(for="about") About

                            input.form-block__input(type="text" id="about" value="Your Story")

                        .form-block__buttons.form-block__buttons--last
                            button.btn.btn--primary(type="button") Save Profile
        

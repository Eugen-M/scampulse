extends ../layout/main
include ../layout/mixins

block title
    | Edit Profile

block styles
    
block content 
    .card 
        .container 
            .card__header
                .card__badge VERIFIED user

                .card__user 
                    .card__user-logo 
                        img(src="../assets/content/avatar.jpg" alt="" class="card__user-img")

                    .card__user-column 
                        .card__user-title Hello, Johny Depp

        .form-block.form-block_bg-gray  
            .container 
                .form-block__wrapper
                    form.form-block__box
                        .form-block__top
                            .form-block__title Edit Profile

                        +form-block-item("Name", "name", "text")
                        .form-block__item 
                            label.form-block__label(for="email") Email

                            input.form-block__input(type="text" id="email" disabled value="test")
                        +form-block-select("Country", "country")
                        +form-block-select("City", "city")
                        +form-block-select("Country", "country")
                        +form-block-item("Phone", "phone", "text")
                        +form-block-textarea("About", "about")

                        .form-block__buttons.form-block__buttons--last
                            button.btn.btn--primary(type="button" disabled) Save Profile
        

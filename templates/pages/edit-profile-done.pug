extends ../layout/main
include ../layout/mixins

block title
    | Edit Profile - Done

block styles
    
block content
    .card 
        .container 
            .card__header
                .card__badge VERIFIED user

                .card__user 
                    .card__user-logo 
                        img(src="../assets/content/avatar.jpg" alt="" class="card__user-img")

                    .card__user-column 
                        .card__user-title Hello, Johny Depp

                .card__header-buttons.card__header-buttons--center
                    a.btn.btn--primary.btn--edit(href="")
                        svg.btn__icon
                            use(href="../assets/img/sprite.svg#settings")
                        span.btn__label Edit Profile

                    a.btn.btn--update(href="")
                        svg.btn__icon
                            use(href="../assets/img/sprite.svg#download")
                        span.btn__label Update Photo

        .card__content 
            .container
                .card__wrapper
                    .card__aside
                        +user-navi
                        +about-user

                    .card__column 
                        .card__subheader 
                            .card__subheader-column
                                .card__subheader-title Post Summary
                                .card__subheader-quantity 3 Total

                        +report-with-images
                        +report
                        +report
                        +report

    +modal-message("verified", "Your profile updated successfully")
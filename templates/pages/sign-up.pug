extends ../layout/main-inner
include ../layout/mixins

block title
    | Sign Up

block styles
    
block content 
    .form-block.form-block_bg-gray  
        .container 
            .form-block__wrapper
                form.form-block__box
                    .form-block__top
                        .form-block__title Join Scampulse

                        .form-block__text Getting started is the first step towards achieving justice, so take action and begin today!

                    +form-block-item("Username", "username", "text")
                    +form-block-item("Email", "email", "text")
                    +form-block-item("Password", "pass", "password")

                    .form-block__buttons
                        button.btn.btn--primary(type="button") Sign Up

                    .form-block__links 
                        .form-block__links-column Alredy Have An Acoount?  
                            a.form-block__links-item(href="") Log In

                    .form-block__sep 
                        .form-block__sep-text or

                    .form-block__buttons
                        button.btn(type="button")
                            svg.btn__icon
                                use(href="../assets/img/sprite.svg#facebook")
                            span.btn__label Log In with Facebook

                        button.btn(type="button")
                            svg.btn__icon
                                use(href="../assets/img/sprite.svg#google")
                            span.btn__label Log In with Google 

                    .form-block__agree Click “Log In” to agree to 
                        a(href="" target="_blank") Scampulse’s Terms of Service 
                        | and acknowledge that 
                        a(href="" target="_blank") Google’s Privacy Policy 
                        | applies to you.

    

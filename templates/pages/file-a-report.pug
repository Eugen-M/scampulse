extends ../layout/main
include ../layout/mixins

block title
    | File A Report

block styles
    
block content 
    .card 
        .container 
            .card__header
                .card__badge VERIFIED user

                .card__user 
                    .card__user-logo 
                        img(src="../assets/content/avatar.jpg" alt="" class="card__user-img")

                    .card__user-column 
                        .card__user-title Hello, Johny Depp

        .form-block.form-block_bg-gray  
            .container 
                .form-block__wrapper
                    form.form-block__box
                        .form-block__top
                            .form-block__title File a Report

                        +form-block-item("Business Name", "name", "text")
                        +form-block-item("Scammer’s Email", "email", "text")
                        +form-block-select("Country", "country")
                        +form-block-item("Scammer’s Adress", "adress", "text")
                        +form-block-item("Scammer’s Phone", "phone", "text")
                        +form-block-item("Scammer’s Website", "website", "text")
                        +form-block-select("Intial Means of Contact", "scam")
                        +form-block-select("Type of Scam", "scam")
                        +form-block-item("Review Headline", "review", "text")
                        +form-block-textarea("Share Your Experience", "experience")

                        .upload 
                            .upload__files 
                                .upload__item
                                    .upload__item-column
                                        .upload__item-photo 
                                            img(src="../assets/content/vermeer.jpg" alt="" class="upload__item-img")

                                            .upload__item-loader
                                                .upload__item-circle
                                                    svg.upload__item-spinner(viewBox="0 0 50 50")
                                                        circle(
                                                            class="upload__item-spinner-path"
                                                            cx="24"
                                                            cy="24"
                                                            r="20"
                                                            fill="none"
                                                            stroke="#ffffff"
                                                            stroke-width="2.5"
                                                        )

                                        .upload__item-box
                                            .upload__item-name windows-JW-T2BH5k5E-unsplash.jpg

                                            .upload__item-status Upload...

                                    button.upload__item-btn 
                                        svg.upload__item-btn-icon
                                            use(href="../assets/img/sprite.svg#delete")
                                        span.upload__item-btn-label Remove

                                .upload__item
                                    .upload__item-column
                                        .upload__item-photo 
                                            img(src="../assets/content/vermeer.jpg" alt="" class="upload__item-img")

                                        .upload__item-box
                                            .upload__item-name windows-JW-T2BH5k5E-unsplash.jpg

                                            .upload__item-status.upload__item-status--success Success

                                    button.upload__item-btn 
                                        svg.upload__item-btn-icon
                                            use(href="../assets/img/sprite.svg#delete")
                                        span.upload__item-btn-label Remove

                                .upload__item
                                    .upload__item-column
                                        .upload__item-photo 
                                            img(src="../assets/content/vermeer.jpg" alt="" class="upload__item-img")

                                        .upload__item-box
                                            .upload__item-name windows-JW-T2BH5k5E-unsplash.jpg

                                            .upload__item-status.upload__item-status--failed Failed

                                    button.upload__item-btn 
                                        svg.upload__item-btn-icon
                                            use(href="../assets/img/sprite.svg#delete")
                                        span.upload__item-btn-label Remove

                            button.upload__btn(type="button")
                                svg.upload__btn-icon
                                    use(href="../assets/img/sprite.svg#plus")
                                span.upload__btn-label Upload Your Files

                        .form-block__buttons.form-block__buttons--last
                            button.btn.btn--primary(type="button" disabled)     
                                span.btn__label Submit 

                                svg.btn__icon
                                    use(href="../assets/img/sprite.svg#send")
        

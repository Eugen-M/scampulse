extends ../layout/main
include ../layout/mixins

block title
    | Contact Us - Filled

block styles
    
block content 
    .card 
        .container 
            .card__header
                .card__badge VERIFIED user

                .card__user 
                    .card__user-logo 
                        img(src="../assets/content/avatar.jpg" alt="" class="card__user-img")

                    .card__user-column 
                        .card__user-title Hello, Johny Depp

        .form-block.form-block_bg-gray  
            .container 
                .form-block__wrapper
                    form.form-block__box
                        .form-block__top
                            .form-block__title Contact Us

                        .form-block__item 
                            label.form-block__label(for="name") Full Name

                            input.form-block__input(type="text" id="name" value="Your Name")

                        .form-block__item 
                            label.form-block__label(for="email") Email

                            input.form-block__input(type="text" id="email" value="Your Name")

                        .form-block__item 
                            label.form-block__label(for="subject") Subject

                            input.form-block__input(type="text" id="subject" value="Your Name")

                        .form-block__item 
                            label.form-block__label(for="message") Your Message

                            input.form-block__input(type="text" id="message" value="Your Name")

                        .form-block__buttons.form-block__buttons--last
                            button.btn.btn--primary(type="button")     
                                span.btn__label Submit 

                                svg.btn__icon
                                    use(href="../assets/img/sprite.svg#send")
        
